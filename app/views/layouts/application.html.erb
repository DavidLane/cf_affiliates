<!DOCTYPE html>
<html>
<head>
  <% title = yield(:title) %>
  <title><%= title.blank? ? 'UK and Ireland Affiliate Data' : title %></title>  
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCEsLFz9TSquUQENz6zCo-5qW9Z3AVT_2s&sensor=true&v=3&libraries=geometry" %>
  <%= javascript_include_tag "application" %>  
  <%= stylesheet_link_tag    "application", :media => "all" %>  
  <%= csrf_meta_tags %>
  <meta property="og:image" content="http://www.cfuk-affiliates.com<%= image_path("screenshot.png") %>" />
</head>
<body>  
    
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <div id="notice">
        <%= flash[:notice] %>
      </div>
    </div>
  <% end %>
  <% if flash[:error] %>
    <p class="error"><%= flash[:error] %></p>
  <% end %>  
  <div class="container">  
  <%= yield %>
  </div>
  
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
  
    ga('create', 'UA-19060180-3', 'cfuk-affiliates.com');
    ga('send', 'pageview');
  
  </script>    
</body>
</html>
