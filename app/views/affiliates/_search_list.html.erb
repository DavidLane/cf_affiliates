<div id="list">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Region</th>
      </tr>
    </thead>                
    <tbody>
      <% @affiliates.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.region.title unless a.region.blank? %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
